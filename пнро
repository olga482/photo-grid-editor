    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        let backgroundImage = null;

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ñ–æ–Ω–æ–≤–æ–≥–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
        document.getElementById('bgImage').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const img = new Image();
                    img.onload = function() {
                        backgroundImage = img;
                        generateGrid();
                    };
                    img.src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // –ò–∑–º–µ–Ω–µ–Ω–∏–µ —Ä–∞–∑–º–µ—Ä–∞ –ø—Ä–∏ –≤—ã–±–æ—Ä–µ –ø—Ä–µ—Å–µ—Ç–∞
        document.getElementById('sizePreset').addEventListener('change', function() {
            generateGrid();
        });

        function hexToRgb(hex) {
            const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
            return result ? {
                r: parseInt(result[1], 16),
                g: parseInt(result[2], 16),
                b: parseInt(result[3], 16)
            } : null;
        }

        function generateGrid() {
            // –ü–æ–ª—É—á–∞–µ–º —Ä–∞–∑–º–µ—Ä—ã
            const preset = document.getElementById('sizePreset').value;
            let width, height;
            
            if (preset === 'custom') {
                width = 1080;
                height = 1080;
            } else {
                [width, height] = preset.split('x').map(Number);
            }
            
            canvas.width = width;
            canvas.height = height;
            
            // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã
            const rows = parseInt(document.getElementById('rows').value);
            const cols = parseInt(document.getElementById('cols').value);
            const wallColor = document.getElementById('wallColor').value;
            const floorColor = document.getElementById('floorColor').value;
            const gridColor = document.getElementById('gridColor').value;
            const horizon = parseInt(document.getElementById('horizon').value) / 100;
            const margin = parseInt(document.getElementById('margin').value);
            
            // –†–∏—Å—É–µ–º —Ñ–æ–Ω
            if (backgroundImage) {
                ctx.drawImage(backgroundImage, 0, 0, width, height);
            } else {
                // –°—Ç–µ–Ω–∞
                ctx.fillStyle = wallColor;
                ctx.fillRect(0, 0, width, height * horizon);
                
                // –ü–æ–ª
                ctx.fillStyle = floorColor;
                ctx.fillRect(0, height * horizon, width, height * (1 - horizon));
                
                // –ì—Ä–∞–¥–∏–µ–Ω—Ç –Ω–∞ –≥—Ä–∞–Ω–∏—Ü–µ
                const gradientHeight = 20;
                const wallRgb = hexToRgb(wallColor);
                const floorRgb = hexToRgb(floorColor);
                
                for (let i = 0; i < gradientHeight; i++) {
                    const alpha = i / gradientHeight;
                    const r = Math.round(wallRgb.r * (1 - alpha) + floorRgb.r * alpha);
                    const g = Math.round(wallRgb.g * (1 - alpha) + floorRgb.g * alpha);
                    const b = Math.round(wallRgb.b * (1 - alpha) + floorRgb.b * alpha);
                    
                    ctx.fillStyle = `rgb(${r}, ${g}, ${b})`;
                    ctx.fillRect(0, height * horizon + i, width, 1);
                }
            }
            
            // –†–∏—Å—É–µ–º —Å–µ—Ç–∫—É
            ctx.strokeStyle = gridColor;
            ctx.lineWidth = 2;
            
            const workWidth = width - 2 * margin;
            const workHeight = height - 2 * margin;
            const cellWidth = workWidth / cols;
            const cellHeight = workHeight / rows;
            
            // –í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–µ –ª–∏–Ω–∏–∏
            for (let i = 0; i <= cols; i++) {
                const x = margin + i * cellWidth;
                ctx.beginPath();
                ctx.moveTo(x, margin);
                ctx.lineTo(x, height - margin);
                ctx.stroke();
            }
            
            // –ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω—ã–µ –ª–∏–Ω–∏–∏
            for (let i = 0; i <= rows; i++) {
                const y = margin + i * cellHeight;
                ctx.beginPath();
                ctx.moveTo(margin, y);
                ctx.lineTo(width - margin, y);
                ctx.stroke();
            }
        }

        function downloadImage() {
            const link = document.createElement('a');
            link.download = 'photo_grid.png';
            link.href = canvas.toDataURL();
            link.click();
        }

        function resetSettings() {
            document.getElementById('sizePreset').value = '1080x1080';
            document.getElementById('rows').value = 3;
            document.getElementById('cols').value = 3;
            document.getElementById('wallColor').value = '#f5f5fa';
            document.getElementById('floorColor').value = '#d2b48c';
            document.getElementById('gridColor').value = '#787878';
            document.getElementById('horizon').value = 50;
            document.getElementById('margin').value = 60;
            document.getElementById('bgImage').value = '';
            backgroundImage = null;
            generateGrid();
        }

        // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–µ—Ç–∫—É –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.onload = function() {
            generateGrid();
        };
    </script>
</body>
